<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="cron_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">cron.res.config.settings.view.form.inherit.mail</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='emails']" position='inside'>
                <div class="col-12 col-lg-6 o_setting_box" id="archived_cron_notify_users_ids">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="archived_cron_notify_users_ids"/>
                        <field name="archived_cron_notify_users_ids" widget="many2many_tags"/>
                        <div class="text-muted">
                            Add users to notify when a cron action is archived.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
